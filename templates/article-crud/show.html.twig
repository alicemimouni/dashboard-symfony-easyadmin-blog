{% extends 'base-admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-center">
    <div class="container m-3">
        <h1 class="m-5 text-center">Article : {{ article.title }}</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ article.title }}</td>
                </tr>
                <tr>
                    <th>Categories</th>
                    <td>
                    <ul class="list-group">{% for categorie in article.categories %}
                           <li class="list-group-item list-group-item-primary">{{ categorie.name }} </li>
                        {% endfor %}
                    </ul>
                    </td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                </tr>
                 <tr>
                    <th>Image</th>
                    <td><img src="{{ asset('img/'~article.image.url) }}" width="100px"></td>
                </tr>
                <tr>
                    <th>Introduction</th>
                    <td>{{ article.introduction }}</td>
                </tr>
                 {% if article.sections %}
                 <tr>
                    <th>Sections</th>
                     <td>
                        <ul class="list-group">{% for section in article.sections %}
                           <li class="list-group-item list-group-item-primary"><a href="{{ path('app_detail_section', {'id': article.id,'id_section': section.id}) }}">
                           {% if section.name %}
                           {{ section.name }}
                           {% else %}
                           section sans titre
                           {% endif %}
                           </a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                {% endif %}
                <tr>
                    <th>Conclusion</th>
                    <td>{{ article.conclusion }}</td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a href="{{ path('app_article_index') }}">Retour</a>
            <a href="{{ path('app_article_edit', {'id': article.id}) }}">Ã‰diter</a>
        </div>
        {{ include('article-crud/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
