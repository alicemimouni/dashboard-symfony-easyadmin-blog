{% extends 'base.html.twig' %}

{% block title %}Rechercher un article{% endblock %}

{% block body %}

<h2 class="title-cards">Recherchez un article</h2>
<div class="searchbar">
{{ form_start(form) }}
{{ form_end(form) }}
</div>

{% if form.vars.submitted %}
    {% if articles == false %}
        <p class="empty">Aucun article trouv√©</p>
    {% endif %}
{% endif %}

{# section all articles #}
<section class="articles">
    <div class="cards-container">
        {# cards #}
        {% for article in articles %}
        <div class="card">
            <img src="{{ asset('img/'~ article.image.url) }}" class="card-img-top" alt=" {{ article.image.alt }} " width="100%">
            <div class="card-content">
                <div class="categories">
                    {% for category in article.categories %}
                    <p class="card-title fs-6"> {{ category.name }} </p>
                    {% endfor %}
                </div>
                <h3> {{ article.title }} </h3>
                <a href=" {{ path('detail_article', {'slug': article.slug }) }} " class="button">Voir
                    l'article</a>
            </div>
        </div>
        {% endfor %}
        {# end cards #}
    </div>
</section>
{# end section all articles #}

{% endblock %}
